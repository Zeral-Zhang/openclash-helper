{
  "manifest_version": 3,
  "name": "OpenClash 规则助手",
  "version": "2.0",
  "description": "快速添加网站到 OpenClash 规则,支持远程同步和本地存储",
  "permissions": ["activeTab", "contextMenus", "storage", "scripting"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "options_page": "config-new.html",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
